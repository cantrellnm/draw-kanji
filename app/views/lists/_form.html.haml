= form_for(@list) do |f|
  - if @list.errors.any?
    #error_explanation
      %h2
        = pluralize(@list.errors.count, "error")
        prohibited this sentence from being saved:
      %ul
        - @list.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label 'List Name'
    %br/
    = f.text_field :name, class: 'form-control', required: true
  .field
    = f.label 'Kanji (comma or space separated)'
    %br/
    = f.text_area :characters, class: 'form-control', required: true
  .actions
    = f.submit 'Save List', class: 'btn primary'