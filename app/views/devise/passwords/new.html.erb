<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form form-inline' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Send Instructions", class: 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
