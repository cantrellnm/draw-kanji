<h2>Resend Unlock Instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form form-line' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Resend Instructions", class: 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
